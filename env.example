# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-in-production
DATABASE_URL=sqlite:///callbot.db

# SIP Configuration
SIP_DOMAIN=pbx.example.com
SIP_USERNAME=1001
SIP_PASSWORD=password

# Ollama Configuration
# For remote Ollama, set these environment variables:
# OLLAMA_URL=https://your-ollama-server.com:11434
# OLLAMA_MODEL=llama2
# 
# For local Ollama (default), leave these unset or use:
# OLLAMA_URL=http://ollama:11434
# OLLAMA_MODEL=llama2

# TTS Configuration
TTS_ENGINE=coqui

# Whisper Configuration
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu

# Redis Configuration
REDIS_URL=redis://redis:6379

# Optional: SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.crt
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION=5
AUDIO_OUTPUT_DIR=audio_output

# Web Server Configuration
WEB_PORT=5000
WEB_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Development Settings
DEBUG=True
TESTING=False 